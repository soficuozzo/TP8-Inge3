{
  "name": "crud-basico-frontend",
  "version": "1.0.0",
  "description": "Frontend estÃ¡tico con Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/public/"
    ],
    "testTimeout": 30000,
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml"
        }
      ]
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "frontend",
    "express",
    "static"
  ],
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "cypress": "^15.6.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
