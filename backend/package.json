{
  "name": "crud-basico-backend",
  "version": "1.0.0",
  "description": "Backend API CRUD bÃ¡sico con Node.js y MongoDB Atlas",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testTimeout": 30000,
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml"
        }
      ]
    ],
    "coverageReporters": ["text", "lcov", "cobertura"]
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["crud", "mongodb", "express", "api"],
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
